{
  "openapi": "3.0.0",
  "info": {
    "title": "Hotel Management System API",
    "version": "1.0.0",
    "description": "API documentation for the Hotel Management System",
    "contact": {
      "name": "Arash Nasrivatan",
      "email": "arashnasrivatan@gmail.com",
      "url": "https://arashnasri.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:4000/api",
      "description": "Local server"
    }
  ],
  "components": {
    "securitySchemes": {
      "accessToken": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "refreshToken": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "ApiResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "example": true },
          "statusCode": { "type": "integer", "example": 200 },
          "message": { "type": "string" },
          "data": { "type": "object" }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": { "type": "string", "example": ["validation errors"] }
        }
      }
    }
  },

  "tags": [
    {
      "name": "Auth 🔐",
      "description": "Authentication routes"
    },
    {
      "name": "Users 🧑‍🦱",
      "description": "User routes"
    },
    {
      "name": "Rooms 🛏️",
      "description": "Room routes"
    },
    {
      "name": "Bookings 📅",
      "description": "Booking routes"
    },
    {
      "name": "Payments 💳",
      "description": "Payment routes"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth 🔐"],
        "summary": "ثبت نام کاربر جدید",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["name", "email", "password"],
                "properties": {
                  "name": { "type": "string", "example": "Arash Nasrivatan" },
                  "email": {
                    "type": "string",
                    "example": "example@gmail.com"
                  },
                  "password": { "type": "string", "example": "SecurePass123" },
                  "avatar": { "type": "file" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "ثبت نام موفق",
            "content": {
              "application/json": {}
            }
          },
          "400": {
            "description": "ایمیل تکراری یا خطای اعتبارسنجی",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/ErrorResponse"
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth 🔐"],
        "summary": "ورود به حساب کاربری",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "example@gmail.com"
                  },
                  "password": { "type": "string", "example": "SecurePass123" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "ورود موفق",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "accessToken": {
                      "type": "string",
                      "example": "jwt.token.here"
                    },
                    "refreshToken": {
                      "type": "string",
                      "example": "refresh.token.here"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "ایمیل یا رمز عبور اشتباه",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/ErrorResponse"
              }
            }
          }
        }
      }
    },
    "/auth/me": {
      "get": {
        "tags": ["Auth 🔐"],
        "summary": "دریافت اطلاعات کاربر جاری",
        "security": [{ "accessToken": [] }],
        "responses": {
          "200": {
            "description": "اطلاعات کاربر دریافت شد",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/ApiResponse"
              }
            }
          },
          "401": {
            "description": "عدم احراز هویت",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/ErrorResponse"
              }
            }
          }
        }
      }
    },
    "/auth/refresh": {
      "get": {
        "tags": ["Auth 🔐"],
        "summary": "تولید مجدد توکن",
        "security": [{ "refreshToken": [] }],
        "responses": {
          "200": {
            "description": "توکن جدید صادر شد",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "accessToken": {
                      "type": "string",
                      "example": "new.jwt.token"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "لطفا مجددا وارد شوید",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/ErrorResponse"
              }
            }
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": ["Auth 🔐"],
        "summary": "خروج از حساب کاربری",
        "security": [{ "accessToken": [] }],
        "responses": {
          "200": {
            "description": "خروج موفق",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "با موفقیت خارج شدید"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "لطفا وارد شوید",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/ErrorResponse"
              }
            }
          }
        }
      }
    },
    "/user/": {
      "get": {
        "tags": ["Users 🧑‍🦱"],
        "summary": "لیست کاربران",
        "description": "این API برای دریافت لیست کاربران با قابلیت صفحه‌بندی و فیلتر بر اساس `userId` است.",
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "description": "شناسه‌ی کاربر (اختیاری)",
            "required": false,
            "schema": {
              "type": "integer",
              "example": 5
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "شماره صفحه (اختیاری، مقدار پیش‌فرض: 1)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1,
              "example": 2
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "تعداد کاربران در هر صفحه (اختیاری، مقدار پیش‌فرض: 10)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10,
              "example": 20
            }
          }
        ],
        "security": [
          {
            "accessToken": []
          }
        ],
        "responses": {
          "200": {
            "description": "لیست کاربران با موفقیت دریافت شد",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "لیست کاربران با موفقیت گرفته شد"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "total": {
                          "type": "integer",
                          "example": 150
                        },
                        "currentPage": {
                          "type": "integer",
                          "example": 2
                        },
                        "totalPages": {
                          "type": "integer",
                          "example": 8
                        },
                        "users": {
                          "type": "array"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "صفحه‌ی موردنظر حاوی کاربری نیست",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 400
                    },
                    "message": {
                      "type": "string",
                      "example": "کاربری در این صفحه وجود ندارد"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "هیچ کاربری یافت نشد",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 404
                    },
                    "message": {
                      "type": "string",
                      "example": "هیچ کاربری یافت نشد"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "لطفا وارد شوید",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/user/forgot-password": {
      "post": {
        "tags": ["Users 🧑‍🦱"],
        "summary": "درخواست بازنشانی رمز عبور",
        "description": "ارسال ایمیل برای بازنشانی رمز عبور. در صورت وجود کاربر، یک ایمیل حاوی لینک بازنشانی ارسال می‌شود.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "user@example.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "ایمیل بازنشانی رمز عبور ارسال شد",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "ایمیل بازنشانی رمز عبور ارسال شد"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "کاربر یافت نشد یا درخواست بیش از حد ارسال شده است",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "کاربری با این ایمیل وجود ندارد یا لطفاً چند دقیقه دیگر تلاش کنید"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "خطا در ارسال ایمیل",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "خطا در ارسال ایمیل"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/reset-password/{token}": {
      "post": {
        "tags": ["Users 🧑‍🦱"],
        "summary": "بازنشانی رمز عبور",
        "description": "کاربر می‌تواند از طریق لینکی که به ایمیلش ارسال شده، رمز عبور جدیدی تنظیم کند.",
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "example": "abcdef123456"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["newPassword", "confirmPassword"],
                "properties": {
                  "newPassword": {
                    "type": "string",
                    "example": "NewSecurePass123!"
                  },
                  "confirmPassword": {
                    "type": "string",
                    "example": "NewSecurePass123!"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "رمز عبور با موفقیت تغییر یافت",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "رمز عبور با موفقیت تغییر یافت"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "لینک نامعتبر است یا رمز عبور مطابقت ندارد",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "لینک بازنشانی نامعتبر است یا رمز عبور و تأیید آن یکسان نیست"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "خطای سرور",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "خطایی رخ داده است، لطفا مجددا تلاش کنید"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/change-password": {
      "post": {
        "tags": ["Users 🧑‍🦱"],
        "summary": "تغییر رمز عبور",
        "description": "این API برای تغییر رمز عبور کاربران استفاده می‌شود. کاربر باید رمز عبور فعلی را ارائه دهد و رمز جدید با تأیید آن ارسال شود.",
        "security": [{ "accessToken": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["oldPassword", "newPassword", "confirmPassword"],
                "properties": {
                  "oldPassword": {
                    "type": "string",
                    "example": "OldSecurePass123!",
                    "description": "رمز عبور فعلی کاربر"
                  },
                  "newPassword": {
                    "type": "string",
                    "example": "NewSecurePass123!",
                    "description": "رمز عبور جدید که باید حداقل ۸ کاراکتر باشد و شامل حروف و اعداد باشد."
                  },
                  "confirmPassword": {
                    "type": "string",
                    "example": "NewSecurePass123!",
                    "description": "تأیید رمز عبور جدید که باید با مقدار `newPassword` برابر باشد."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "رمز عبور با موفقیت تغییر یافت",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "رمز عبور با موفقیت تغییر یافت"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "خطا در درخواست کاربر",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "رمز عبور و تأیید آن یکسان نیست"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "احراز هویت نامعتبر",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "توکن نامعتبر است یا منقضی شده است"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/profile": {
      "put": {
        "tags": ["Users 🧑‍🦱"],
        "summary": "ویرایش پروفایل",
        "description": "این API برای ویرایش اطلاعات پروفایل کاربر استفاده می‌شود. می‌توان نام، ایمیل و تصویر پروفایل را تغییر داد.",
        "security": [{ "accessToken": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["name", "email"],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Arash Nasrivatan",
                    "description": "نام جدید کاربر"
                  },
                  "email": {
                    "type": "string",
                    "example": "example@gmail.com",
                    "description": "ایمیل جدید کاربر که نباید تکراری باشد"
                  },
                  "avatar": {
                    "type": "string",
                    "format": "binary",
                    "description": "فایل تصویر پروفایل (فرمت‌های مجاز: JPG, PNG)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "پروفایل با موفقیت به‌روزرسانی شد",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "پروفایل با موفقیت به‌روزرسانی شد"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer", "example": 1 },
                        "name": {
                          "type": "string",
                          "example": "Arash Nasrivatan"
                        },
                        "email": {
                          "type": "string",
                          "example": "example@gmail.com"
                        },
                        "avatar": {
                          "type": "string",
                          "example": "/images/avatars/1700000000-image.jpg"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "ایمیل قبلاً ثبت شده است یا اطلاعات نادرست است",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "این ایمیل قبلاً ثبت شده است"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "کاربر یافت نشد",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "کاربری با این شناسه یافت نشد"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/delete-account": {
      "delete": {
        "tags": ["Users 🧑‍🦱"],
        "summary": "حذف حساب کاربری",
        "description": "این API برای حذف حساب کاربری استفاده می‌شود. کاربران عادی می‌توانند حساب خود را حذف کنند، اما ادمین‌ها می‌توانند حساب کاربران دیگر را نیز حذف کنند.",
        "security": [{ "accessToken": [] }],
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "required": false,
            "description": "شناسه کاربری که باید حذف شود (فقط برای ادمین‌ها). اگر مقدار `userId` ارسال نشود، حساب کاربری جاری حذف خواهد شد.",
            "schema": {
              "type": "integer",
              "example": 5
            }
          }
        ],
        "responses": {
          "200": {
            "description": "حساب کاربری با موفقیت حذف شد",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "حساب کاربری با موفقیت حذف شد"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "خطا در درخواست (مثلاً حذف حساب ادمین یا نداشتن `userId` برای حذف کاربر دیگر)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "ادمین نمی‌تواند حساب کاربری خود را حذف کند"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "کاربر موردنظر یافت نشد",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "کاربری با این شناسه یافت نشد"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "احراز هویت نامعتبر",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "توکن نامعتبر است یا منقضی شده است"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/rooms": {
      "get": {
        "tags": ["Rooms 🛏️"],
        "summary": "دریافت لیست اتاق‌ها",
        "description": "این API لیست تمام اتاق‌های موجود را همراه با تصاویر آنها برمی‌گرداند.",
        "parameters": [
          {
            "name": "page",
